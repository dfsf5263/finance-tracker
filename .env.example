# Environment variables template
# Copy this file to .env.local and fill in the actual values

# Database configuration
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://your_username:your_password@your_host:5432/your_database?schema=public"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key"
CLERK_SECRET_KEY="sk_test_your_secret_key"

# Clerk URLs (optional - defaults shown)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
# NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Webhook secret for syncing Clerk users with database
# CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret"